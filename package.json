{
  "name": "@class-hooks/use-remote-resource",
  "version": "1.0.0",
  "description": "stay up to date with your server using one line",
  "main": "dist/src/index.js",
  "keywords": [
    "react",
    "hooks",
    "class components",
    "class hooks"
  ],
  "author": "Roy Sommer",
  "repository": {
    "type": "git",
    "url": "https://github.com/class-hooks/use-remote-resource.git"
  },
  "private": false,
  "scripts": {
    "test": "jest",
    "start": "node .",
    "clean": "rm -rf dist",
    "build:typescript": "tsc",
    "build": "npm run build:typescript",
    "watch:typescript": "tsc -w",
    "watch": "npm run watch:typescript",
    "lint": "tslint --project tsconfig.json",
    "posttest": "npm run lint",
    "prerelease": "npm run clean && npm run build && npm test",
    "release": "release-it"
  },
  "devDependencies": {
    "@testing-library/react": "^9.4.0",
    "@types/chance": "^1.0.8",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "chance": "^1.1.4",
    "class-hooks": "^1.0.4",
    "jest": "^25.1.0",
    "nock": "^11.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "release-it": "^12.4.3",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.5",
    "wix-eventually": "^2.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "src",
      "test"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "^.+\\.spec\\.(ts|tsx|js)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "peerDependencies": {
    "class-hooks": "*"
  },
  "dependencies": {
    "axios": "^0.19.2"
